<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaunchObserver.Views.LaunchesPage">

    <Grid RowDefinitions="10*,5*,57*">
        <Grid Grid.Row="0" BackgroundColor="Blue">
            <Image Source="launchobserver_logo.png" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   HeightRequest="70"/>
        </Grid>

        <Grid Grid.Row="1" Style="{StaticResource ContentBackground}">
            <Label Text="Upcoming Launches:" 
                   VerticalOptions="End" 
                   Margin="15,0,15,10" 
                   FontSize="18" 
                   FontAttributes="Bold,Italic"/>
        </Grid>

        <CollectionView Grid.Row="2" x:Name="LaunchList" 
                        ItemsSource="{Binding UpcomingLaunches}" 
                        Style="{StaticResource ContentBackground}">
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5,0,5,0" ColumnDefinitions="*" Padding="10,0,10,5">
                        <Border Style="{StaticResource CardStyle}" 
                                StrokeThickness="2">

							<Border.GestureRecognizers>
								<TapGestureRecognizer Tapped="LaunchCardTapped"/>
							</Border.GestureRecognizers>

                            <Grid ColumnDefinitions="90,*" RowDefinitions="Auto,Auto,Auto">
                                <Image Grid.Column="0" Grid.RowSpan="3" 
                                           Source="{Binding Image.ImageUrl, FallbackValue=launch_placeholder_image.png}"
                                           HorizontalOptions="Center"
                                            WidthRequest="80" HeightRequest="80" 
                                            Aspect="Fill"
                                            Margin="0,5,0,5"/>

                                <Label Grid.Column="1" Grid.Row="0" 
                                    Text="{Binding Mission.Name}" 
                                    FontSize="16" 
                                    Padding="10,0,0,0" 
                                    FontAttributes="Bold"
                                    Margin="0,10,0,0"/>

                                <Label Grid.Column="1" Grid.Row="1" 
                                    Text="{Binding Provider.Name, StringFormat=Provider: \{0\}}" 
                                    FontSize="13" 
                                    Padding="10,0,0,0"/>

                                <Label Grid.Column="1" Grid.Row="2" 
                                    Text="{Binding LaunchDate, StringFormat=Window Opens: \{0:g\}}"
                                    FontSize="13" 
                                    Padding="10,0,0,10"/>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
        </CollectionView>
        
    </Grid>

</ContentPage>