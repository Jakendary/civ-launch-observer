<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaunchObserver.Views.SettingsPage">

    <Grid RowDefinitions="10*,62*">
        <Grid Grid.Row="0" BackgroundColor="Blue">
            <Image Source="launchobserver_logo.png" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   HeightRequest="70"/>
        </Grid>

        <Grid Grid.Row="1" BackgroundColor="LightGrey">
            <Border Grid.Row="1" 
                    BackgroundColor="White" 
                    Stroke="Black" 
                    StrokeThickness="2" 
                    Margin="25,20,25,20">

                <Grid RowDefinitions="Auto, Auto, Auto"
                      ColumnDefinitions="Auto,Auto">
                    <Label Grid.Row="0" Grid.Column="0"
                           x:Name="SettingsCard" 
                           Text="Settings" FontSize="22" 
                           Padding="10,10,10,0" 
                           FontAttributes="Bold"/>
                    <Label Grid.Row="1" Grid.Column="0" 
                           Text="Enable Dark Mode" FontSize="16" 
                           Padding="10,30,10,0" 
                           FontAttributes="Bold"/>
                    <Switch x:Name="DarkModeSwitch" 
                            Grid.Row="1" Grid.Column="1"
                            Margin="5,17,0,0"/>
                    <Label Grid.Row="2" Grid.Column="0" 
                           Text="Enable 24hr Times" FontSize="16" 
                           Padding="10,20,10,0" 
                           FontAttributes="Bold"/>
                    <Switch x:Name="TwentyFourHourSwitch" 
                            Grid.Row="2" Grid.Column="1"
                            Margin="5,7,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentPage>